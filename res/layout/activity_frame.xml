<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/index_bg"
    >
    <LinearLayout
        android:id="@+id/Frame_BottemView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/index_tab_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/MyBottemShouyeBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/MyBottemShouyeImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_shouye_yes" />

            <TextView
                android:id="@+id/MyBottemShouyeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@color/frame_selsected_yes"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MyBottemShoucangBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/MyBottemShoucangImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_shoucang_no" />

            <TextView
                android:id="@+id/MyBottemShoucangTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
             	android:textColor="@color/frame_selsected_no"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MyBottemHistoryBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/MyBottemHistoryImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history_no" />

            <TextView
                android:id="@+id/MyBottemHistoryTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记录"
                 android:textColor="@color/frame_selsected_no"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MyBottemMyBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/MyBottemMyImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_me_no" />

            <TextView
                android:id="@+id/MyBottemMyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                 android:textColor="@color/frame_selsected_no"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
	<View 
			    android:id="@+id/hexian"
			    android:layout_height="1dp" 
			    android:background="#c4c4c4" 
			    android:layout_width="fill_parent"
			    android:layout_above="@id/Frame_BottemView"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/FramePager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/hexian" >
    </android.support.v4.view.ViewPager>
	
</RelativeLayout>