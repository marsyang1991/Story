<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="90.5dp"
    android:background="#ffffff"
    android:id="@+id/rl" >

	<ImageView
	    android:id="@+id/image"
	    android:layout_width="70dp"
	    android:layout_height="70dp"
	    android:layout_margin="10dp"
	    />
	<ImageView 
		    android:layout_marginRight="22dp"
		    android:id="@+id/dustbin"
		    android:layout_alignParentRight="true"
		   
		    android:layout_width="wrap_content"
		    android:layout_height = "wrap_content"
		    android:layout_centerVertical="true"
		    />
	<RelativeLayout 
	    android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:layout_toRightOf="@id/image"
   		android:layout_toLeftOf="@id/dustbin"
   		android:layout_marginTop="10dp">
   		<LinearLayout
   		    android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:orientation="horizontal"
   			android:id="@+id/gv_title"
   			>
   		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="18sp"
		        android:textColor="#f68720"
		        android:text = "八百壮士守四行"
	       		android:id="@+id/kemu"/>
   		</LinearLayout>
   		<RatingBar 
   		   	android:id="@+id/ratingBar"
   		   	android:layout_below="@id/gv_title"
   		   	style="@style/roomRatingBar"
   		   	android:numStars="5" 
   		   	android:isIndicator="true"
   		 	android:rating="1" 
   		 	android:clickable="false" 
   		 	android:stepSize = "1.0"    		  		
    		android:layout_width="wrap_content"
    		android:layout_height="18dp"
    		android:layout_marginTop="7dp"/>    		
    		
   	
	 	<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="13sp"
	        android:layout_below="@id/ratingBar"
	        android:textColor="#a5a5a8"
	        android:id="@+id/tvrenqi"
	        android:layout_marginTop="7dp"
	        android:text = "人气："
	      	/>
	 	<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="13sp"
	        android:layout_toRightOf="@id/tvrenqi"
	        android:layout_alignBottom="@id/tvrenqi"
	        android:textColor="#a5a5a8"
	        android:text = "5000"
	        android:id="@+id/renqi"
	      	/>
	 	<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="13sp"
	        android:textColor="#a5a5a8"
	        android:layout_alignBottom="@id/tvrenqi"
	        android:layout_alignParentRight="true"
	        android:text = "04:35"
	        android:id="@+id/shichang"
	      	/>
	 	<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="13sp"
	        android:textColor="#a5a5a8"
	        android:layout_alignBottom="@id/tvrenqi"
	        android:layout_toLeftOf="@id/shichang"
	        android:text = "时长："
	      	/>
	 	
   		</RelativeLayout>
		
    

</RelativeLayout>
