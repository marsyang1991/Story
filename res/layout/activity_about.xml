<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="#ffffff"
     >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/titlerelativelayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FD8914"
        android:gravity="center_vertical"
        >
        <LinearLayout 
            android:layout_width = "wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/about_back"
            android:layout_marginLeft="@dimen/content_horizontal_margin"
            android:layout_centerVertical="true">
            <ImageView 
                android:layout_width = "10dp"
            	android:layout_height="20dp"
            	android:src="@drawable/ic_left"
            	/>
            <TextView
                android:layout_width = "wrap_content"
            	android:layout_height="wrap_content"
            	android:text = "返回"
            	android:layout_marginLeft="5dp"
            	android:textSize = "16sp"
            	android:textColor ="#ffffff"/>
        </LinearLayout>      
        <TextView
            android:id="@+id/Login_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="关于"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
            android:textSize="19sp" 
            />
    </RelativeLayout>
	<ImageView
	     android:layout_width="90dp"
         android:layout_height="90dp"
         android:src="@drawable/ic_about_image"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="8dp"
         android:layout_gravity="center_horizontal"
	    />
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:text="听故事 学知识"
	    android:textSize="16sp"
	   	android:textColor="#272727"
	    />
	<Button
	    android:id="@+id/about_banben"
	    android:layout_width="80dp"
	    android:layout_height="27dp"
	    android:gravity="center"
	    android:layout_gravity="center_horizontal"
	    android:text="版本更新 1.0"
	    android:textSize="12sp"
	    android:layout_marginTop="16dp"
	   	android:textColor="#f68720"
	   	android:background="@drawable/yanzhemabuttonstyle"/>
	 <View 
	    android:layout_height="1px" 
	    android:background="#ebebeb" 
	    android:layout_width="fill_parent"
	    android:layout_marginTop="10dp"/>
	  <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/content_horizontal_margin"
	    android:layout_marginRight="@dimen/content_horizontal_margin"
	    android:layout_marginTop="10dp"
	    android:text="       学通天下（北京）教育咨询公司成立于2014年，是由海龟人士及国内教育专家共同打造的专注K12教育的科技型企业。"
	    android:textSize="12sp"
	   	android:textColor="#454545"
	     />
	  <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/content_horizontal_margin"
	    android:layout_marginRight="@dimen/content_horizontal_margin"
	    android:layout_marginTop="6dp"
	    android:text="       公司以“尊重价值”为核心理念，以“让学习变得有趣”为使命。通过对客户需求的深入解读及学习规律的精准分析，通过持续的创新及借助先进的科学技术，以期实现让学习变得轻松，让学员爱上学习的目标。"
	    android:textSize="12sp"
	   	android:textColor="#454545"
	     />
	 <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/content_horizontal_margin"
	    android:layout_marginRight="@dimen/content_horizontal_margin"
	    android:layout_marginTop="16dp"
	    android:lineSpacingMultiplier="1.5"
	    android:text="公司联系方式\n网站: www.hqyxjy.com\n邮箱: diaozhijun@hqyxjy.com"
	    android:textSize="12sp"
	   	android:textColor="#454545"
	     />
	 </LinearLayout>
	 <LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_marginBottom="16dp"
    	android:layout_alignParentBottom="true"
	     >
	     <TextView
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
		    android:text="听故事用户服务协议"
		    android:textSize="11sp"
		   	android:textColor="#216f80"
	         />
	     <TextView 
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
		    android:text="学通天下(北京)教育咨询公司 版权所有"
		    android:layout_marginTop="5dp"
		    android:textSize="11sp"
		   	android:textColor="#a5a5a8"/>
	 </LinearLayout>
</RelativeLayout>
