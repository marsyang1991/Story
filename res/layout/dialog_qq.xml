<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/dialogbgstyle"
    android:orientation="vertical" >
<TextView 
    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/myInfo_content"
        android:layout_gravity="center"
        android:text="QQ"
        />
   <EditText 
       	android:id="@+id/dialog_editText" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/yuanjiaoedittextsytle"
        android:layout_marginTop="5dp"
        style="@style/myInfo_content"
        android:inputType="numberSigned"
        android:layout_gravity="center"
        />
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="5dp">
        <Button
       android:id="@+id/bt_cancel"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:text="取消"
       style = "@style/myInfo_content"
       android:layout_margin="10dp"
       android:background="@drawable/cancelbuttonstyle"
       />
        <Button
       android:id="@+id/bt_ok"
       android:text="确定"
       android:textColor="#ffffff"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:layout_margin="10dp"
       android:background="@drawable/normalbuttonstyle"
       />
   </LinearLayout>
	
</LinearLayout>
